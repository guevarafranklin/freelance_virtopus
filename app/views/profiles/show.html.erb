<div class="container mx-auto p-4">
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center space-x-6 mb-4">
      <% if @profile.avatar.present? %>
        <img src="<%= @profile.avatar %>" alt="Profile" class="h-24 w-24 rounded-full">
      <% else %>
        <div class="h-24 w-24 rounded-full bg-gray-300 flex items-center justify-center">
          <span class="text-2xl text-gray-500"><%= @profile.first_name[0] %><%= @profile.last_name[0] %></span>
        </div>
      <% end %>
      
      <div>
        <h1 class="text-2xl font-bold"><%= @profile.first_name %> <%= @profile.last_name %></h1>
        <p class="text-gray-600"><%= @profile.title %></p>
        <% if @profile.user == current_user %>
          <%= link_to "Edit Profile", edit_profile_path(@profile), class: "text-blue-500" %>
        <% end %>
      </div>
    </div>
    
    <div class="mt-6">
      <h2 class="text-xl font-semibold mb-2">About</h2>
      <p class="text-gray-700"><%= @profile.bio %></p>
    </div>
    
    <% if @profile.user.freelancer? %>
      <div class="mt-6">
        <h2 class="text-xl font-semibold mb-2">Skills</h2>
        <div class="flex flex-wrap gap-2">
          <% @profile.skills.split(',').each do |skill| %>
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm"><%= skill.strip %></span>
          <% end %>
        </div>
      </div>
      
      <div class="mt-6">
        <h2 class="text-xl font-semibold mb-2">Hourly Rate</h2>
        <p class="text-2xl font-bold text-green-600">$<%= @profile.hourly_rate %>/hr</p>
      </div>
    <% end %>
  </div>
</div>